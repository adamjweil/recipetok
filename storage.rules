rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Allow public read access to all video files and segments
    match /videos/{videoId}/{fileName} {
      allow read: if true;  // Allow public read access to all video files
      allow write: if request.auth != null;
      
      // Explicitly allow access to HLS segments and playlists
      match /{allSegments=**} {
        allow read: if true;
      }
    }

    // Allow access to all HLS segments
    match /videos/{videoId}/{quality}/{segment} {
      allow read: if true;  // Allow public read access to all segments
      allow write: if request.auth != null;
    }

    // Default rule for everything else
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow access to stories and all subfolders
    match /stories/{userId}/{type}/{filename} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow access to user avatars
    match /user_avatars/{userId}/{allImages=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow access to thumbnails
    match /thumbnails/{userId}/{allThumbnails=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}

