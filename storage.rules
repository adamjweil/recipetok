rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow access to stories and all subfolders
    match /stories/{userId}/{type}/{filename} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow access to user avatars
    match /user_avatars/{userId}/{allImages=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow access to video uploads
    match /videos/{userId}/{allVideos=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Allow access to thumbnails
    match /thumbnails/{userId}/{allThumbnails=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
  }
}

